<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#ff134466"
        android:layout_weight="0.08"    >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/summonerSpell1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/item_0"
            android:layout_margin="2dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/summonerSpell2"
            android:src="@drawable/item_0"
            android:baselineAlignBottom="false"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/summonerSpell1"
            android:layout_margin="2dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:id="@+id/trinket"
            android:src="@drawable/item_0"
            android:layout_margin="2dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/summonerItem6"
            android:src="@drawable/item_0"
            android:layout_toLeftOf="@id/trinket"
            android:layout_margin="2dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/summonerItem5"
            android:src="@drawable/item_0"
            android:layout_toLeftOf="@+id/summonerItem6"
            android:layout_margin="2dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/summonerItem4"
            android:src="@drawable/item_0"
            android:layout_toLeftOf="@+id/summonerItem5"
            android:layout_margin="2dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/summonerItem3"
            android:src="@drawable/item_0"
            android:layout_toLeftOf="@+id/summonerItem4"
            android:layout_margin="2dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/summonerItem2"
            android:src="@drawable/item_0"
            android:layout_toLeftOf="@+id/summonerItem3"
            android:baselineAlignBottom="true"
            android:layout_margin="2dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/summonerItem1"
            android:src="@drawable/item_0"
            android:layout_toLeftOf="@+id/summonerItem2"
            android:layout_margin="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView"
            android:layout_below="@+id/summonerSpell1"
            android:layout_alignLeft="@+id/summonerSpell1"
            android:layout_alignStart="@+id/summonerSpell1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView5"
            android:layout_alignTop="@+id/textView"
            android:layout_alignRight="@+id/trinket"
            android:layout_alignEnd="@+id/trinket" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView10"
            android:layout_below="@+id/textView9"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView11"
            android:layout_below="@+id/textView10"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10" />

    </RelativeLayout>

</LinearLayout>