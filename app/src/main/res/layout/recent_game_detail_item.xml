<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#ff134466">

        <ImageView
            android:id="@+id/summonerSpell1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:src="@drawable/item_0" />

        <ImageView
            android:id="@+id/summonerSpell2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/summonerSpell1"
            android:baselineAlignBottom="false"
            android:src="@drawable/item_0" />

        <ImageView
            android:id="@+id/trinket"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:src="@drawable/item_0" />

        <ImageView
            android:id="@+id/summonerItem6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@id/trinket"
            android:src="@drawable/item_0" />

        <ImageView
            android:id="@+id/summonerItem5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/summonerItem6"
            android:src="@drawable/item_0" />

        <ImageView
            android:id="@+id/summonerItem4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/summonerItem5"
            android:src="@drawable/item_0" />

        <ImageView
            android:id="@+id/summonerItem3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/summonerItem4"
            android:src="@drawable/item_0" />

        <ImageView
            android:id="@+id/summonerItem2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/summonerItem3"
            android:baselineAlignBottom="true"
            android:src="@drawable/item_0" />

        <ImageView
            android:id="@+id/summonerItem1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/summonerItem2"
            android:src="@drawable/item_0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView3"
            android:layout_toStartOf="@+id/summonerItem4"
            android:layout_below="@+id/trinket"
            android:layout_toRightOf="@+id/summonerItem5"
            android:layout_toEndOf="@+id/summonerItem5"
            android:layout_alignRight="@+id/trinket"
            android:layout_alignEnd="@+id/trinket" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_toRightOf="@+id/summonerItem5"
            android:layout_toEndOf="@+id/summonerItem5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView4"
            android:layout_toEndOf="@+id/summonerItem5"
            android:layout_alignTop="@+id/textView8"
            android:layout_toRightOf="@+id/summonerItem5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView5"
            android:layout_toEndOf="@+id/summonerItem5"
            android:layout_below="@+id/imageView5"
            android:layout_toRightOf="@+id/summonerItem5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView6"
            android:layout_toStartOf="@+id/summonerItem5"
            android:layout_alignTop="@+id/textView3"
            android:layout_toLeftOf="@+id/summonerItem5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView7"
            android:layout_toStartOf="@+id/summonerItem5"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_toLeftOf="@+id/summonerItem5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView8"
            android:layout_toStartOf="@+id/summonerItem5"
            android:layout_alignTop="@+id/imageView5"
            android:layout_toLeftOf="@+id/summonerItem5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView9"
            android:layout_toStartOf="@+id/summonerItem5"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:layout_toLeftOf="@+id/summonerItem5" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/item_0"
            android:layout_toStartOf="@+id/textView6"
            android:layout_alignTop="@+id/textView6"
            android:layout_toLeftOf="@+id/textView6" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/item_0"
            android:layout_toStartOf="@+id/textView6"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/item_0"
            android:layout_toStartOf="@+id/textView6"
            android:layout_below="@+id/imageView4"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/item_0"
            android:layout_toStartOf="@+id/textView9"
            android:layout_below="@+id/imageView5"
            android:layout_toLeftOf="@+id/textView9" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/item_0"
            android:layout_toStartOf="@+id/textView9"
            android:layout_below="@+id/imageView6"
            android:layout_toLeftOf="@+id/textView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView10"
            android:layout_toStartOf="@+id/summonerItem5"
            android:layout_alignTop="@+id/imageView7"
            android:layout_toRightOf="@+id/imageView7"
            android:layout_toEndOf="@+id/imageView7"
            android:layout_toLeftOf="@+id/summonerItem5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView11"
            android:layout_toEndOf="@+id/summonerItem5"
            android:layout_toStartOf="@+id/trinket"
            android:layout_alignTop="@+id/textView10"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignEnd="@+id/textView5"
            android:layout_toRightOf="@+id/summonerItem5" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/item_0"
            android:layout_toStartOf="@+id/summonerItem6"
            android:layout_alignBottom="@+id/textView11"
            android:layout_alignLeft="@+id/imageView15"
            android:layout_alignStart="@+id/imageView15" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/item_0"
            android:layout_toStartOf="@+id/textView5"
            android:layout_above="@+id/textView11"
            android:layout_toLeftOf="@+id/textView5" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/item_0"
            android:layout_toStartOf="@+id/summonerItem6"
            android:layout_below="@+id/textView"
            android:layout_toLeftOf="@+id/summonerItem6" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/item_0"
            android:layout_toStartOf="@+id/summonerItem6"
            android:layout_below="@+id/imageView2"
            android:layout_toLeftOf="@+id/summonerItem6" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/item_0"
            android:layout_toStartOf="@+id/summonerItem6"
            android:layout_alignTop="@+id/textView3"
            android:layout_toLeftOf="@+id/summonerItem6" />
    </RelativeLayout>

</LinearLayout>