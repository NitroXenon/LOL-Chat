<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:background="#ff134466">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/gameavatar"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/lolchat_lclogo"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/gamestatus"
            android:id="@+id/labelstatus"
            android:layout_alignTop="@+id/gameavatar"
            android:layout_toRightOf="@+id/gameavatar"
            android:fontFamily="sans-serif-light"
            android:layout_toEndOf="@+id/gameavatar"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/gametype"
            android:id="@+id/labeltype"
            android:layout_below="@+id/labelstatus"
            android:layout_toRightOf="@+id/gameavatar"
            android:layout_toEndOf="@+id/gameavatar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/gamelocation"
            android:id="@+id/labellocation"
            android:layout_below="@+id/labeltype"
            android:layout_toRightOf="@+id/gameavatar"
            android:layout_toEndOf="@+id/gameavatar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/gamedate"
            android:id="@+id/labeldate"
            android:paddingRight="5dp"
            android:layout_below="@+id/labelip"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/gameip"
            android:id="@+id/labelip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="5dp"
            android:gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="30"
            android:id="@+id/handval"
            android:layout_above="@+id/labelip"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="5dp"
            android:gravity="right"
            android:paddingLeft="3dp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/handicon"
            android:layout_toStartOf="@+id/handval"
            android:src="@drawable/lolchat_assist"
            android:layout_alignTop="@+id/handval"
            android:layout_toLeftOf="@+id/handval" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="20"
            android:id="@+id/skullval"
            android:layout_toStartOf="@+id/handicon"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_alignTop="@+id/handicon"
            android:layout_toLeftOf="@+id/handicon" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/skullicon"
            android:layout_toStartOf="@+id/skullval"
            android:src="@drawable/lolchat_death"
            android:layout_alignTop="@+id/skullval"
            android:layout_toLeftOf="@+id/skullval" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="10"
            android:id="@+id/swordval"
            android:layout_toStartOf="@+id/skullicon"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_alignTop="@+id/skullicon"
            android:layout_toLeftOf="@+id/skullicon" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/swordicon"
            android:layout_toStartOf="@+id/swordval"
            android:src="@drawable/lolchat_sword"
            android:layout_alignTop="@+id/swordval"
            android:layout_toLeftOf="@+id/swordval" />

    </RelativeLayout>
</LinearLayout>